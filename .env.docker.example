# =================================================================
# Docker Compose Environment Variables
# Copy this file to .env and update the values
# =================================================================

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
# PostgreSQL database name
POSTGRES_DB=beppp

# PostgreSQL username (superuser for initial setup)
POSTGRES_USER=beppp

# PostgreSQL password - CHANGE THIS IN PRODUCTION!
POSTGRES_PASSWORD=your_secure_database_password_here

# PostgreSQL port (host machine)
POSTGRES_PORT=5432

# =================================================================
# DATABASE SECURITY - SEPARATE USERS
# =================================================================
# Read-only database user for Panel dashboard
# This user only has SELECT permissions - no write/modify access
DB_PANEL_USER=panel_readonly
DB_PANEL_PASSWORD=tTQ]y1.+K3YBDlL%j1-]

# Read/write database user for API application
# This user has INSERT, UPDATE, DELETE but not schema modification
DB_API_USER=api_user
DB_API_PASSWORD=~x84,V9]3mZOSS~MR85a

# Migration user for Alembic (full schema control)
# Only used when running database migrations
DB_MIGRATION_USER=migration_user
DB_MIGRATION_PASSWORD=I$>9@TIy91uPMk8,GGbJ

# =================================================================
# APPLICATION SECRETS
# =================================================================
# Secret key for JWT token signing - MUST BE RANDOM AND SECURE!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=generate_a_long_random_secret_key_here_at_least_32_characters

# Webhook secret for battery data endpoints
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
WEBHOOK_SECRET=generate_another_random_secret_for_webhooks

# JWT algorithm (usually HS256)
ALGORITHM=HS256

# =================================================================
# TOKEN EXPIRATION SETTINGS
# =================================================================
# How long user login tokens are valid (in hours)
USER_TOKEN_EXPIRE_HOURS=24

# How long battery device tokens are valid (in hours)
# Default: 8760 = 1 year
BATTERY_TOKEN_EXPIRE_HOURS=8760

# =================================================================
# SERVICE PORTS (HOST MACHINE)
# =================================================================
# API Backend port
API_PORT=8000

# Panel Analytics port
PANEL_PORT=5100

# Frontend port
FRONTEND_PORT=3000

# =================================================================
# FRONTEND CONFIGURATION
# =================================================================
# API URL for frontend (used during build)
# For production, use your domain, e.g., https://api.yourdomain.com
API_URL=http://localhost:8000

# Panel URL for frontend (used during build)
# For production, use your domain, e.g., https://panel.yourdomain.com
PANEL_URL=http://localhost:5100

# =================================================================
# SECURITY CONFIGURATION
# =================================================================
# CORS allowed origins (comma-separated list)
# For production, specify your exact domains
# Example: https://yourdomain.com,https://api.yourdomain.com,https://panel.yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:5100

# =================================================================
# ENVIRONMENT SETTINGS
# =================================================================
# Debug mode (set to False in production)
DEBUG=False

# Environment name
ENVIRONMENT=production

# =================================================================
# ADMIN USER (Created on first run)
# =================================================================
# Default admin username
ADMIN_USERNAME=admin

# Default admin password - CHANGE THIS IMMEDIATELY!
ADMIN_PASSWORD=changeme123

# Admin email
ADMIN_EMAIL=admin@example.com
