# =================================================================
# Docker Compose Environment Variables
# Copy this file to .env and update the values
# =================================================================

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
# PostgreSQL database name
POSTGRES_DB=beppp

# PostgreSQL username
POSTGRES_USER=beppp

# PostgreSQL password - CHANGE THIS IN PRODUCTION!
POSTGRES_PASSWORD=your_secure_database_password_here

# PostgreSQL port (host machine)
POSTGRES_PORT=5432

# =================================================================
# APPLICATION SECRETS
# =================================================================
# Secret key for JWT token signing - MUST BE RANDOM AND SECURE!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=generate_a_long_random_secret_key_here_at_least_32_characters

# Webhook secret for battery data endpoints
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
WEBHOOK_SECRET=generate_another_random_secret_for_webhooks

# JWT algorithm (usually HS256)
ALGORITHM=HS256

# =================================================================
# TOKEN EXPIRATION SETTINGS
# =================================================================
# How long user login tokens are valid (in hours)
USER_TOKEN_EXPIRE_HOURS=24

# How long battery device tokens are valid (in hours)
# Default: 8760 = 1 year
BATTERY_TOKEN_EXPIRE_HOURS=8760

# =================================================================
# SERVICE PORTS (HOST MACHINE)
# =================================================================
# API Backend port
API_PORT=8000

# Panel Analytics port
PANEL_PORT=5100

# Frontend port
FRONTEND_PORT=3000

# =================================================================
# ENVIRONMENT SETTINGS
# =================================================================
# Debug mode (set to False in production)
DEBUG=False

# Environment name
ENVIRONMENT=production

# =================================================================
# ADMIN USER (Created on first run)
# =================================================================
# Default admin username
ADMIN_USERNAME=admin

# Default admin password - CHANGE THIS IMMEDIATELY!
ADMIN_PASSWORD=changeme123

# Admin email
ADMIN_EMAIL=admin@example.com
